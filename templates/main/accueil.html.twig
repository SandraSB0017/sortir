{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}
    <h1>Page d'accueil!</h1>

    <a href="{{ path('sortie_creation',{'id': app.user.id})}}" class="">Créer une sortie</a>

    <div>
        {{ form_start(form)}}
        {{ form_widget(form) }}
            <button type="submit" name="rechercher">Rechercher</button>
        {{ form_end(form) }}
    </div>

    <div>



            <table class="table">
                <thead>

                <tr>
                    <th scope="col">Nom de la sortie</th>
                    <th scope="col">Date de la sortie</th>
                    <th scope="col">Clôture</th>
                    <th scope="col">Inscrits/places</th>
                    <th scope="col">Etat</th>
                    <th scope="col">Inscrit</th>
                    <th scope="col">Organisateur</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for sortie in sorties %}
                <tr>
                    <td>{{ sortie.nom }}</td>
                    <td>{{ sortie.infosSortie }}</td>
                    <td>datedeFin</td>
                    <td>{{ sortie.participants.count }}/{{ sortie.nbInscriptionsMax }}</td>
                    <td>{{ sortie.etat.libelle }}</td>
                    <td>inscrit</td>
                    <td>{{ sortie.organisateur.nom }}</td>
                    <td><button onclick="inscriptionSortie()">s'inscrire</button></td>
                </tr>
                {% endfor %}
                </tbody>
            </table>




    </div>

{% endblock %}
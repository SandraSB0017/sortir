                <td>{{ sortie.dateHeureDebut.format('d/m/y h:i') }} }}<td>
                <td>Lieu: <td>
                <td>{{ sortie.lieu }}<td>
            </tr>
            <tr>
                <td>Date limite d'inscription: <td>
                <td>{{ sortie.dateLimiteInscription.format('d/m/y') }}<td>
                <td>Rue: <td>
                <td>{{ sortie.rue }}<td>
            </tr>
            <tr>
                <td>Nombre de places: <td>
                <td>{{ sortie.nbInscriptionsMax }}<td>
